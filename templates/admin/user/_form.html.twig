<div class="m-auto shadow p-3">
{{ form_start(form) }}
    <div class="row">
        <div class="col">{{ form_row(form.prenom) }}</div>
        <div class="col">{{ form_row(form.nom) }}</div>
    </div>
    <div class="row">
        <div class="col">{{ form_row(form.email) }}</div>
        <div class="col">{{ form_row(form.roles) }}</div>
        <div class="col">{{ form_row(form.classe) }}</div>
    </div>
    <div class="row">
        <div class="col">{{ form_row(form.password.first) }}</div>
        <div class="col">{{ form_row(form.password.second) }}</div>
    </div>
    <button class="btn btn-outline-primary btn-lg">{{ button_label|default('Enregistrer') }}</button>
{{ form_end(form) }}
</div>