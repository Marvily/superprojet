{% extends 'admin/base.html.twig' %}

{% block title %}User{% endblock %}

{% block content %}
<div class="col-12"><a href="{{ path('admin_user_index') }}" class="btn btn-outline-primary mb-3">Back to list</a></div>
<div class=" m-auto shadow p-3">

    <table class="table">
        <h6>Utilisateur</h6>

        <tbody>

            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ user.prenom }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.nom }}</td>
            </tr>
            {% if user.classe.id is defined %}
            <tr>
                <th>Classe</th>
                <td>{{ user.classe.instituition }} - {{ user.classe.codepostal }}</td>
            </tr>
                {% elseif user.classe is null %}
            {% endif %}
        </tbody>
    </table>

    <a href="{{ path('admin_user_edit', {'id': user.id}) }}" class="btn btn-outline-primary">Edit</a>
</div>

    <div class="col-12 mt-3"> {{ include('admin/user/_delete_form.html.twig') }}</div>

{% endblock %}
