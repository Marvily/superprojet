{% extends 'admin/base.html.twig' %}

{% block title %}User index{% endblock %}

{% block content %}



    <a href="{{ path('admin_user_new') }}" class="btn btn-outline-primary mb-3">Create new</a>
<div class="m-auto shadow p-3">
    <table class="table">
        <thead>
            <tr>
                <th>Prenom</th>
                <th>Nom</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.prenom }}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>

                <td>
                    <a href="{{ path('admin_user_show', {'id': user.id}) }}"><span class="fa fa-eye mr-3"></span></a>
                    <a href="{{ path('admin_user_edit', {'id': user.id}) }}"><span class="fa fa-edit "></span></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</div>
{% endblock %}
