{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('asset/css/style.css') }}">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
{% endblock %}
{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>

{% endblock %}

{% block body %}


    <div class="wrapper d-flex align-items-stretch">
        <nav id="sidebar">
            <div class="custom-menu">
                <button type="button" id="sidebarCollapse" class="btn btn-primary">
                    <i class="fa fa-bars"></i>
                    <span class="sr-only">Toggle Menu</span>
                </button>
            </div>
            <div class="p-4">
                <h1><img src="{{ asset('asset/media/logoblue3.svg') }}" alt="logo" class="logo"></h1>
                {% if app.user %}
                    <p>Bonjour <strong>{{ app.user.prenom }}</strong></p>
                {% endif %}
                <ul class="list-unstyled components mb-5">
                        <li class="active">
                            <a href="{{ path('teacher_home') }}"><span class="fa fa-home mr-3"></span> Home</a>
                        </li>
                    <li>
                        <a href="{{ path('teacher_calendar_index') }}"><span class="fa fa-calendar-check-o mr-3"></span> Agenda</a>
                    </li>
                    <li>
                        <a href="{{ path('teacher_learning_rooms') }}"><span class="fa fa-graduation-cap mr-3"></span> Learning Rooms</a>
                    </li>

                </ul>

                <div class="mb-5">
                    <ul class="list-unstyled components mb-5">
                        <li>
                            <a href="{{ path('teacher_profile_index') }}"><span class="fa fa-user-circle-o mr-3"></span> Mon compte</a>
                        </li>
                        <li>
                            <a href="{{ path('app_logout') }}"><span class="fa fa-sign-out mr-3"></span> DÃ©connection</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <div id="content" class="p-4 p-md-5 pt-5">
            <div class="container">
                <h1>{% block title %}{% endblock %}</h1>

                <div class="card ">
                    <div class="row no-gutters">

                        {% block content %}{% endblock %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
